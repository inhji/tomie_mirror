<nav>
  <ul>
    <li><%= live_redirect "Back", to: Routes.live_path(@socket, TomieWeb.ListenLive.Index) %></li>
  </ul>
</nav>

<div class="card flex flex-row">
  <div class="mr-4">
    <img src="<%= @image %>" class="w-40" >
  </div>
  <div class="flex-auto">
    <h1><%= @album.name %></h1>
    <p class="text-on-surface-muted">
      <span class="icon">
        <%= IconView.icon(:music) %>
      </span>
      <%= Enum.count(@album.listens) %>
    </p>
    <p class="text-on-surface-muted">
      <span class="icon">
        <%= IconView.icon(:time) %>
      </span>
      <%= last_listen(@album) %>
    </p>
  </div>
</div>
