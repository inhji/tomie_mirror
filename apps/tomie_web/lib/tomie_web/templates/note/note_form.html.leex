<%= f = form_for @changeset, "#",
  [phx_change: :validate, phx_submit: :save] %>
  <fieldset>
    <%= label f, :title %>
    <%= text_input f, :title %>
    <%= error_tag f, :title %>
  </fieldset>

  <fieldset>
    <%= label f, :content %>
    <%= textarea f, :content, rows: 10 %>
    <%= error_tag f, :content %>
  </fieldset>

  <%= submit "submit", class: "button" %>
</form>
