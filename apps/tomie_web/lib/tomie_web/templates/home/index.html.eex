<h2>Latest Bookmarks</h2>

<ul>
	<%= for b <- @bookmarks do %>
		<li>
			<h3>
				<a href="<%= b.source %>" class="external">
					<%= b.title %>				
				</a>
			</h3>
			<p>in <%= Enum.map(b.tags, fn (t) -> t.name end) |> Enum.join(", ") %></p>
		</li>
	<% end %>
</ul>

<h2>Latest Listens</h2>

<ul>
	<%= for l <- @listens do %>
		<li>
			<h3>
				<span>
					<%= l.track.name %>				
				</span>
			</h3>
			<p>by <%= l.artist.name %></p>
		</li>
	<% end %>
</ul>

