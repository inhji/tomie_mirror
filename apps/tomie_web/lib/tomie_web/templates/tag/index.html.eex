<section class="pt-3 mb-3">
  <%= link "Add new Tag",
    to: Routes.tag_path(@conn, :new),
    class: "button block uppercase" %>
</section>

<%= for tag <- @tags do %>
  <article class="shadow p-3">
    <h1>
      <%= link tag.name, to: Routes.tag_path(@conn, :show, tag), class: "block" %>
    </h1>
  </article>
<% end %>
